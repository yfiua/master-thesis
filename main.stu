@all: thesis.pdf;

thesis.pdf: thesis.tex DEP
{
        rm -f *.aux *.log *.out *.bbl *.blg *.nls
        pdflatex -file-line-error -halt-on-error thesis.tex
        bibtex thesis
        makeindex thesis.nlo -s nomencl.ist -o thesis.nls
        pdflatex -file-line-error -halt-on-error thesis.tex
        pdflatex -file-line-error -halt-on-error thesis.tex
}

@clean:
{
        rm -f *.aux *.lo? *.out *.bbl *.blg *.nl? *.ilg *.toc
        rm -f thesis.pdf
}
